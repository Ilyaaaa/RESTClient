<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:src="@drawable/default_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/margin"/>
        
    <TextView
        android:id="@+id/item_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_img"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/item_header_size"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_email_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_name_field"
        app:layout_constraintLeft_toRightOf="@id/item_img"
        android:layout_margin="@dimen/margin"/>

    <TextView
        android:id="@+id/item_num_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@id/item_email_field"
        app:layout_constraintLeft_toRightOf="@id/item_img" />
</android.support.constraint.ConstraintLayout>